pipeline {
  agent {
      label 'master'
  }

  options {
    buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '3')
    disableConcurrentBuilds()
    timestamps()
  }

  stages {
    stage('CleanWorkspace') {
      steps {
        cleanWs()
      }
    }
    stage('LoginToDockerHUB') {
      steps {
        Credentials([usernamePassword(credentialsId: 'dockerhub_login', username: 'USERNAME', passwordVariable: 'PASSWORD')]) {
          sh """
            docker login -u $USERNAME -p $PASSWORD
          """
        }
      }
    }
    stage('CreateDockerImage') {
      steps {
        sh 'docker build -t anpod07/nginx-test:latest .'
      }
    }
    stage('PushDockerImage') {
      steps {
        sh 'docker push anpod07/nginx-test:latest'
      }
    }
  }
}

